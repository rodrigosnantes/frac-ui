{
    "compilerOptions": {
      "target": "esnext",                // O alvo de saída do código compilado
      "module": "esnext",                // Tipo de módulo a ser gerado
      "jsx": "react-jsx",                // Configuração para arquivos JSX
      "strict": true,                    // Habilita todas as verificações estritas
      "moduleResolution": "node",        // Resolução de módulo do Node
      "esModuleInterop": true,           // Habilita interoperação com módulos ES
      "skipLibCheck": true,              // Ignorar checagem de tipo para arquivos de definição de biblioteca
      "forceConsistentCasingInFileNames": true // Forçar a consistência em nomes de arquivos
    },
    "include": ["src"],                  // Inclui todos os arquivos na pasta src
    "exclude": ["node_modules"]          // Exclui a pasta node_modules
  }
  